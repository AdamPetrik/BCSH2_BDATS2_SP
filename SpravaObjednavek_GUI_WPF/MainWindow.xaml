<Window x:Class="SpravaObjednavek_GUI_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpravaObjednavek_GUI_WPF"
        mc:Ignorable="d"
        Title="Přihlášení" Height="400" Width="300" FontSize="18"
        WindowStartupLocation="CenterScreen">
    <Grid Loaded="Grid_Loaded">
        <Label x:Name="usernameLabel" Content="Přihlašovací jméno" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameTb" HorizontalAlignment="Center" Margin="10,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="passwordLabel" Content="Heslo" HorizontalAlignment="Center" Margin="10,95,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="passwordTb" HorizontalAlignment="Center" Margin="10,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="okBtn" Content="Přihlásit se" HorizontalAlignment="Center" Margin="0,206,0,0" VerticalAlignment="Top" Padding="5" Click="loginBtn_Click"/>
        <Button x:Name="guestBtn" Content="Pokračovat jako host" HorizontalAlignment="Center" Margin="0,264,0,0" VerticalAlignment="Top" Padding="5" Click="guestBtn_Click"/>

    </Grid>
</Window>
